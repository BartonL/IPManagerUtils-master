<?xml version="1.0" encoding="utf-8"?>
<cn.magicbeans.android.ipmanager.utils.swipe.MBSwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mb_white"
    android:id="@+id/mb_swipe_layout">

    <TextView
        android:id="@+id/mb_right_menu"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/mb_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mb_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/mb_valid_ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/mb_loading"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/mb_name_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/mb_black"
                    android:text=""/>

            </LinearLayout>

            <TextView
                android:id="@+id/mb_ip_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                android:textSize="13sp"
                android:textColor="@color/mb_gray"
                android:text=""/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/mb_line"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/mb_status_ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/mb_choose"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:visibility="gone"/>

    </RelativeLayout>




</cn.magicbeans.android.ipmanager.utils.swipe.MBSwipeItemLayout>